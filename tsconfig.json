{
  "compilerOptions": {
    "module": "es6",
    "target": "es3",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "@view/*": [
        "./src/view/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}