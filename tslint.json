{
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "semi": true
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "bin",
      "conworks.js"
    ]
  }
}
